{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "lineWidth": 160,
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md,html,scss,css}"
  ],
  "excludes": [
    "website/playground/build",
    "scripts/build-website",
    "**/node_modules",
    "**/dist",
    "**/target",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.45.0.wasm",
    "https://plugins.dprint.dev/json-0.10.2.wasm",
    "https://plugins.dprint.dev/markdown-0.7.1.wasm",
    "https://plugins.dprint.dev/prettier-0.2.1.exe-plugin@c051918d0c4cf082b5ccdf92e89af3dcb2859e18f75073ba16dda6366e493a03"
  ]
}
