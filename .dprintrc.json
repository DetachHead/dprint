{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "lineWidth": 160,
  "typescript": {
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "semiColons": "always",
    "arrowFunction.useParentheses": "preferNone"
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md,html,scss}"
  ],
  "excludes": [
    "website/playground/build",
    "scripts/build-website",
    "**/node_modules",
    "**/dist",
    "**/target",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.27.0.wasm",
    "https://plugins.dprint.dev/json-0.7.0.wasm",
    "https://plugins.dprint.dev/markdown-0.4.0.wasm",
    "https://plugins.dprint.dev/prettier-0.1.0.exe-plugin@1c335dffb7e75f6268f0c8c0bc2a61a60548b3896d9deb498cecb76939ae8262"
  ]
}
