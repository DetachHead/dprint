{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "lineWidth": 160,
  "typescript": {
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "semiColons": "always",
    "arrowFunction.useParentheses": "preferNone"
  },
  "json": {
    "indentWidth": 2
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md,html,scss}"
  ],
  "excludes": [
    "website/playground/build",
    "scripts/build-website",
    "**/node_modules",
    "**/dist",
    "**/target",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.26.0.wasm",
    "https://plugins.dprint.dev/json-0.5.0.wasm",
    "https://plugins.dprint.dev/markdown-0.3.0.wasm",
    "https://plugins.dprint.dev/prettier-2.0.5.exe-plugin@af213ba141a1b99473beb52a1093ce85bc315ca970feb0165794b70a54da82c5"
  ]
}
