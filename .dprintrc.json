{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "lineWidth": 160,
  "typescript": {
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "semiColons": "always",
    "arrowFunction.useParentheses": "preferNone"
  },
  "json": {
    "indentWidth": 2
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md}"
  ],
  "excludes": [
    "website/playground/build",
    "scripts/build-website",
    "**/node_modules",
    "**/dist",
    "**/target",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.19.6.wasm",
    "https://plugins.dprint.dev/json-0.4.1.wasm",
    "https://plugins.dprint.dev/markdown-0.2.0.wasm"
  ]
}
